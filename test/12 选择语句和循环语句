// 20000行有效代码的积累
int main()
{
    int line = 0;
    printf("go to university\n");

    while(line < 20000)
    {
        printf("write code: %i\n", line);
        line++;
    }
    if(line >= 20000)
    {
        printf("good offer\n");
    }
    else
    {
        printf("keep going\n");
    }
    return 0;
}
