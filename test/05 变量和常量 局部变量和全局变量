// 计算2个整数的和
// scanf 输入函数
// printf 输出函数
int main()
{
    int num1 = 0;
    int num2 = 0; // 初始化，不初始化会随机

    // 输入两个整数
    scanf("%i %i", &num1, &num2); // & 取地址
    //求和
    int sum = num1 + num2;
    //输出
    printf("%i\n", sum);

    return 0;
}
